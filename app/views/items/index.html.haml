%h1 Online Shop

=@session_id

%ul.items
  =render @items

-if @purchasing_items.empty?
  %h3 Basket is empty
-else
  %h3 Eligible Promotions

  %ul.promotions
    -if @codes && @codes.any?
      =render @codes
    -if @quantities && @quantities.any?
      =render @quantities

  #basket
    =render @basket
